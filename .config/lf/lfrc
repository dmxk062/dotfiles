map gc cd ~/.config
map gd cd /dev/disk/by-label
map gD cd ~/Documents/
map gv cd ~/Media
map gV cd ~/places/gvfs
map gU cd ~/places
map gp cd ~/Pictures
map gs cd ~/Pictures/Screenshots
map gw cd ~/ws
map g<space> push :cd<space>
# clears the set marks
map u unselect
map <esc> clear
# bookmark
map M mark-save
# sort
map sa
map sc
map sn
