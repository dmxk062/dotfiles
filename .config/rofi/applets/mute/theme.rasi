// vim: ft=rasi
@theme "~/.config/rofi/style/color.rasi"

window {
    location: center;
    anchor: center;
    background-color: @bg0;
    children: [mainbox];
    width: 36em;
    height: 23em;
}

mainbox {
    spacing: 10px;
    children: [top-box, listbox];
    background-color: @bg0;
    orientation: horizontal;
}
listbox {
    children: [listview, entry];
    expand: true;
    background-color: transparent;
}
mode-switcher {
    background-color: transparent;
    background-color: @bg0;
    border-radius: 12px;
}
button {
    background-color: @bg0;
    border-radius: 18px;
    padding: 0.5em 0.9em 0.5em 0.6em;
    text-color: @fg0;
    width: 5em;
}
button selected {
    background-color: @bg1;
}

listview {
    padding: 8px;
    border-radius: 18px;
    background-color: transparent;
    dynamic: true;
    expand: true;
    columns: 1;
}

element {
    padding: 8px;
    border-radius: 14px;
    background-color: @bg0;
    color: @fg0;
    text-color: @fg0;
    highlight: bold underline;
}
element selected.normal, element selected.active {
    background-color: @bg1;
    color: @fg0;
    text-color: @fg0;
    highlight: bold underline;
}
element normal.active, element alternate.active {
    text-color: @fg3;
}
element selected.active {
    text-color: @fg3;
}
element-text, element-icon {
    background-color: inherit;
    text-color: inherit;
}
element-icon {
    size: 2em;
    padding: 0em 0.5em 0em 0em;
}

element-text {
    padding: 0 0 0 1em;
}
entry {
    expand: false;
    background-color: @bg1;
    text-color: @fg0;
    cursor: text;
    placeholder: "mute";
    placeholder-color: @fg3;
    padding: 12px;
    margin: 24px;
    border-radius: 12px;
} 

top-box {
    padding: 12px;
    border-radius: 12px;
    background-color: @bg0;
    children: [imagebox];
}

imagebox {
    background-image: url("~/.config/background/wall", height);
    background-color: @bg0;
    border-radius: 12px;
}
