(defwidget settings []
    (box :halign "center" :valign "center"
        (box :orientation "v":space-evenly false :valign "start" :class "window" :hexpand true :vexpand true
            (box :hexpand true :space-evenly false :class "header"
                (section_selector)
                (close_button))
            (sections)
        )
    )
)

