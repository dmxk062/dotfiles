(defvar audio_state '{}')
(defvar active_sinks '{}')
(defvar active_sources '{}')


(defwindow out_popup
    :geometry (geometry :x 0
                        :y 0
                        :width "10%"
                        :height "10%"
                        :anchor "center bottom"
                )
    :stacking "overlay"
    :namespace "eww_popup"
    (output)
)


(defwidget output []
    (box :space-evenly false :halign "center" :valign "center"
        (box :space-evenly false :class "popup-box"
            (label :text "${audio_state.sink.mute ? "󰝟" : (audio_state.sink.vol > 70 ? "󰕾" : ( audio_state.sink.vol > 33 ? "󰖀" : "󰕿"))}" :class "volicon${audio_state.sink.mute ? "-muted" : ""}")
            (box :orientation "v"
                (label :text "Out: ${active_sinks.name}" :limit-width 20 :class "heading")
                    (scale :value "${audio_state.sink.vol}" :class "volslider${audio_state.sink.mute ? "-muted" : ""}")
            )
            (label :text "${audio_state.sink.vol}%" :class "vollabel")
        )
    )   
)

(defwindow in_popup
    :geometry (geometry :x 0
                        :y 0
                        :width "10%"
                        :height "10%"
                        :anchor "center bottom"
                )
    :stacking "overlay"
    :namespace "eww_popup"
    (inputscale)
)

(defwidget inputscale []
    (box :space-evenly false :halign "center" :valign "center"
        (box :space-evenly false :class "popup-box"
            (label :text "${audio_state.source.mute ? "󰝟" : (audio_state.source.vol > 70 ? "󰕾" : ( audio_state.source.vol > 33 ? "󰖀" : "󰕿"))}" :class "volicon${audio_state.source.mute ? "-muted" : ""}")
            (box :orientation "v"
                (label :text "In: ${active_sources.name}" :limit-width 20 :class "heading")
                (scale :value "${audio_state.source.vol}" :class "volslider${audio_state.source.mute ? "-muted" : ""}")
            )
            (label :text "${audio_state.source.vol}%" :class "vollabel")
        )
    )
)
