{
    "Insert code block": {
        "prefix": "codeblock",
        "body": ["```${1:language}", "$0", "```"],
        "description": "Insert fenced code block"
    },

    "Superscript":{
        "prefix":"sup",
        "body": ["<sup>${1}</sup>"],
        "description": "Create a superscript character"
    },
