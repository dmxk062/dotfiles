{
    "New Directory": {
        "prefix": ["dir", "md"],
        "body": ["${1:dir}/"],
        "description": "Create a directory"
    },
    "New File": {
        "prefix": ["file", "mf"],
        "body": ["${1:file}"],
        "description": "Create a file"
    },
    "New Link": {
        "prefix": ["link", "ln"],
        "body": ["${1:name} -> ./${2:target}"],
        "description": "Create a symbolic link"
    },
    "C Header/Source Pair": {
        "prefix": ["cch"],
        "body": ["${1:name}.c\n${1:name}.h"],
        "description": "Create a C header and implementation file"
    },
    "Permissions: 0755" : {
        "prefix": ["755", "pdir"],
        "body": ["rwxr-xr-x"],
        "description":"Allow only the owner to write, but everyone to read"
    },
    "Permissions: 0644" : {
        "prefix" : ["644", "pfile"],
        "body": ["rw-r--r--"],
        "description":"Standard file bitmask"
    }
}
