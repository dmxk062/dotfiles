# archaic greek letters, double @
# digamma
<Multi_key> <at> <at> <w> : "ϝ"
<Multi_key> <at> <at> <W> : "Ϝ"
# qoppa
<Multi_key> <at> <at> <q> : "ϙ"
<Multi_key> <at> <at> <Q> : "Ϙ"
# san
<Multi_key> <at> <at> <s> : "ϻ"
<Multi_key> <at> <at> <S> : "Ϻ"
# sampi, i know its probably /ss/ or /s:/, but it looks like <T>
<Multi_key> <at> <at> <t> : "ͳ"
<Multi_key> <at> <at> <T> : "Ͳ"

# accents etc
<Multi_key> <at> <asciitilde> : U0342       # ᾶ
<Multi_key> <at> <apostrophe> : U0343       # ἀ
<Multi_key> <at> <quotedbl> : U0344         # α̈́
