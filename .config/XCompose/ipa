# vim: ft=xcompose

# IPA using xcompose
# use \ as the leader
# generally try to mimic xsampa, and rather CXS (conlang xsampa)

# basic consonants and vowels
# for these, the lowercase ones generally give the IPA version with a backslash
# the capital ones also have a backslash, even though they do not in the IPA

<Multi_key> <backslash> <h> : "ɦ" U0266 # voiced glottal fricative
<Multi_key> <backslash> <g> : "ɡ" U0261 # voiced velar plosive
<Multi_key> <backslash> <j> : "ʝ" U029d # voiced palatal fricative
<Multi_key> <backslash> <l> : "ɺ" U027a # alveolar lateral flap
<Multi_key> <backslash> <p> : "ɸ" U0278 # voiceless bilabial fricative
<Multi_key> <backslash> <r> : "ɹ" U0279 # alveolar approximant
<Multi_key> <backslash> <s> : "ɕ" U0255 # voiceless alveolo-palatal fricative
<Multi_key> <backslash> <v> : "ʋ" U028b # labiodental approximant
<Multi_key> <backslash> <x> : "ɧ" U0267 # voiceless palatal-velar fricative
<Multi_key> <backslash> <z> : "ʑ" U0291 # voiced alveolo-palatal fricative
<Multi_key> <backslash> <u> : "ʉ" U0289 # close central rounded vowel, NOTE: CXS
<Multi_key> <backslash> <A> : "ɑ" U0251 # open back unrounded vowel
<Multi_key> <backslash> <B> : "β" U03b2 # voiced bilabial fricative, NOTE: == @a
<Multi_key> <backslash> <C> : "ç" U00e7 # voiceless palatal fricative
<Multi_key> <backslash> <D> : "ð" U00f0 # voiced dental fricative, NOTE: == dh
<Multi_key> <backslash> <E> : "ε" U03b5 # open-mid front unrounded vowel, NOTE: == @e
<Multi_key> <backslash> <F> : "ɱ" U0271 # labiodental nasal
<Multi_key> <backslash> <G> : "ɣ" U0263 # voiced velar fricative
<Multi_key> <backslash> <H> : "ɥ" U0265 # labial-palatal approximant
<Multi_key> <backslash> <I> : "ɪ" U026a # near-close front unrounded vowel
<Multi_key> <backslash> <J> : "ɲ" U0272 # palatal nasal
<Multi_key> <backslash> <K> : "ɬ" U026c # voiceless alveolar lateral fricative
<Multi_key> <backslash> <L> : "ʎ" U028e # palatal lateral approximant
<Multi_key> <backslash> <M> : "ɯ" U026f # close back unrounded vowel
<Multi_key> <backslash> <N> : "ŋ" U014b # velar nasal, NOTE: == ng
<Multi_key> <backslash> <O> : "ɔ" U0254 # open-mid back rounded vowel
<Multi_key> <backslash> <Q> : "ɒ" U0252 # open back rounded vowel
<Multi_key> <backslash> <R> : "ʁ" U0281 # voiced uvular fricative
<Multi_key> <backslash> <S> : "ʃ" U0283 # voiceless postalveolar fricative
<Multi_key> <backslash> <T> : "θ" U03b8 # voiceless dental fricative, NOTE: == <comp>@y
<Multi_key> <backslash> <U> : "ʊ" U028a # near-close back rounded vowel
<Multi_key> <backslash> <V> : "ʌ" U028c # open-mid back unrounded vowel
<Multi_key> <backslash> <W> : "ʍ" U028d # voiceless labial-velar fricative
<Multi_key> <backslash> <X> : "χ" U03c7 # voiceless uvular fricative
<Multi_key> <backslash> <Y> : "ʏ" U028f # near-close front rounded vowel
<Multi_key> <backslash> <Z> : "ʒ" U0292 # voiced postalveolar fricative

# the number row
<Multi_key> <backslash> <1> : "ɨ" U0268 # close central unrounded vowel, NOTE: == <comp>/i
<Multi_key> <backslash> <2> : "ø" U00f8 # close-mid front rounded vowel, NOTE: == <comp>/o
<Multi_key> <backslash> <at>: "ɘ" U0258 # close-mid central unrounded vowel, NOTE: ee is ə already, save one \
<Multi_key> <backslash> <3> : "ɜ" U025c # open-mid central unrounded vowel
<Multi_key> <backslash> <4> : "ɾ" U027e # alveolar flap/tap
<Multi_key> <backslash> <5> : "ɫ" U026b # velarized alveolar lateral approximant
<Multi_key> <backslash> <6> : "ɐ" U0250 # near-open central vowel
<Multi_key> <backslash> <7> : "ɤ" U0264 # close-mid back unrounded vowel
<Multi_key> <backslash> <8> : "ɵ" U0275 # close-mid central rounded vowel
<Multi_key> <backslash> <9> : "œ" U0153 # open-mid front rounded vowel, NOTE: == <comp>oe

# symbols
<Multi_key> <backslash> <grave> <at> : "ɚ"              U025a # r-coloured schwa
<Multi_key> <backslash> <ampersand> : "ɶ"               U0276 # open front rounded vowel, NOTE ae is æ already, so IPA, not CXS
<Multi_key> <backslash> <backslash> <3> : "ɞ"           U025e # open-mid central rounded vowel
<Multi_key> <backslash> <question> : "ʔ"                U0294 # glottal stop
<Multi_key> <backslash> <backslash> <question> : "ʕ"    U0295 # voiced pharyngeal fricative
<Multi_key> <backslash> <exclam> : "ǃ"                  U01c3 # postalveolar click
<Multi_key> <backslash> <bar> : "ǀ"                     U01c0 # dental click
<Multi_key> <backslash> <backslash> <bar> : "ǁ"         U01c1 # alveolar lateral click
<Multi_key> <backslash> <equal> : "ǂ"                   U01c2 # palatal click
<Multi_key> <backslash> <less> <less> : "ʢ"             U02a2 # voiced epiglottal fricative
<Multi_key> <backslash> <greater> <greater> : "ʡ"       U02a1 # voiceless epiglottal fricative

# double backslashes, those are C\ in xsampa
<Multi_key> <backslash> <backslash> <B> : "ʙ" U0299 # bilabial trill
<Multi_key> <backslash> <backslash> <G> : "ɢ" U0262 # voiced uvular plosive
<Multi_key> <backslash> <backslash> <H> : "ʜ" U029c # voiceless epiglottal fricative
<Multi_key> <backslash> <backslash> <I> : "ᵻ" U1d7b # near-close central unrounded vowel, WARN: not IPA
<Multi_key> <backslash> <backslash> <J> : "ɟ" U025f # voiced palatal plosive
<Multi_key> <backslash> <backslash> <K> : "ɮ" U026e # voiced alveolar lateral fricative
<Multi_key> <backslash> <backslash> <L> : "ʟ" U029f # velar lateral approximant
<Multi_key> <backslash> <backslash> <M> : "ɰ" U0270 # velar approximant
<Multi_key> <backslash> <backslash> <N> : "ɴ" U0724 # uvular nasal
<Multi_key> <backslash> <backslash> <O> : "ʘ" U0298 # bilabial click
<Multi_key> <backslash> <backslash> <R> : "ʀ" U0280 # uvular trill
<Multi_key> <backslash> <backslash> <U> : "ᵿ" U1d7f # near-close central rounded vowel, WARN: not IPA
<Multi_key> <backslash> <backslash> <X> : "ħ" U0127 # voiceless pharyngeal fricative, NOTE: == /h

# implosives
<Multi_key> <backslash> <less> <b> : "ɓ" U0253 # voiced bilabial implosive
<Multi_key> <backslash> <less> <d> : "ɗ" U0257 # voiced alveolar implosive
<Multi_key> <backslash> <less> <g> : "ɠ" U0260 # voiced velar implosive
<Multi_key> <backslash> <less> <G> : "ʛ" U029b # voiced uvular implosive
<Multi_key> <backslash> <less> <J> : "ʄ" U0284 # voiced palatal implosive

# retroflex
<Multi_key> <backslash> <grave> <n>  : "ɳ"              U0273 # retroflex nasal
<Multi_key> <backslash> <grave> <r>  : "ɽ"              U027d # retroflex flap/tap
<Multi_key> <backslash> <backslash> <grave> <r>  : "ɻ"  U027b # retroflex approximant
<Multi_key> <backslash> <grave> <l>  : "ɭ"              U026d # retroflex lateral approximant
<Multi_key> <backslash> <grave> <d>  : "ɖ"              U0256 # voiced retroflex plosive
<Multi_key> <backslash> <grave> <t>  : "ʈ"              U0288 # voiceless retroflex plosive
<Multi_key> <backslash> <grave> <s>  : "ʂ"              U0290 # voiced retroflex fricative
<Multi_key> <backslash> <grave> <z>  : "ʐ"              U0290 # voiced retroflex fricative

# symbols
<Multi_key> <backslash> <apostrophe> : "ˈ" U02c8 # primary stress
<Multi_key> <backslash> <comma> : "ˌ"      U02cc # secondary stress
<Multi_key> <backslash> <colon> : "ː"      U02d0 # long
<Multi_key> <backslash> <semicolon> : "ˑ"  U02d1 # half long, NOTE: xsampa uses :\
<Multi_key> <backslash> <minus> : "‿"      U203f # linking mark, e.g. for liaison
<Multi_key> <backslash> <parenleft>  :     U0361 # tie bar above: t͡ʃ
<Multi_key> <backslash> <parenright> :     U035c # tie bar below: t͜ʃ

# diacritics, starting with _
<Multi_key> <backslash> <underscore> <j> : "ʲ"        U02b2 # palatalized: tʲ
<Multi_key> <backslash> <underscore> <greater> : "ʼ"  U02bc # ejective: tʼ
<Multi_key> <backslash> <underscore> <question> : "ˤ" U02e4 # pharyngeal: tˤ
<Multi_key> <backslash> <underscore> <grave> : "˞"    U02de # rhotacized: ə˞
<Multi_key> <backslash> <underscore> <g> : "ˠ"        U02e0 # velarized: tˠ
<Multi_key> <backslash> <underscore> <h> : "ʰ"        U02b0 # aspirated: tʰ
<Multi_key> <backslash> <underscore> <l> : "ˡ"        U02e1 # lateral release: tˡ
<Multi_key> <backslash> <underscore> <n> : "ⁿ"        U207f # nasal release: tⁿ
<Multi_key> <backslash> <underscore> <w> : "ʷ"        U02b7 # labialized: tʷ

# combining diacritics
# they go *after* the letter they modify
<Multi_key> <backslash> <underscore> <quotedbl> : U0308     # centralized: ë
<Multi_key> <backslash> <underscore> <x> : U033d            # mid-centralized: e̽
<Multi_key> <backslash> <underscore> <plus> : U031f         # advanced: e̟
<Multi_key> <backslash> <underscore> <minus> : U0320        # retracted: e̠
<Multi_key> <backslash> <underscore> <o> : U031e            # lowered: e̞
<Multi_key> <backslash> <underscore> <r> : U031d            # raised: e̝
<Multi_key> <backslash> <underscore> <X> : U0306            # extra short: ŭ
<Multi_key> <backslash> <underscore> <equal> : U0329        # syllabic: n̩
<Multi_key> <backslash> <underscore> <asciicircum> : U032f  # non syllabic: u̯
<Multi_key> <backslash> <underscore> <A> : U0318            # advanced tongue root: e̘
<Multi_key> <backslash> <underscore> <q> : U0319            # retracted tongue root: e̙
<Multi_key> <backslash> <underscore> <a> : U033a            # apical: t̺
<Multi_key> <backslash> <underscore> <c> : U031c            # less rounded: o̜
<Multi_key> <backslash> <underscore> <O> : U0339            # more rounded: o̹
<Multi_key> <backslash> <underscore> <d> : U032a            # dental: t̪
<Multi_key> <backslash> <underscore> <e> : U0334            # pharyngealized: t̴
<Multi_key> <backslash> <underscore> <m> : U033b            # laminal: t̻
<Multi_key> <backslash> <underscore> <N> : U033c            # linguolabial: f̼

# voicing types (loosely)
<Multi_key> <backslash> <underscore> <0> : U0325            # voiceless: m̥
<Multi_key> <backslash> <underscore> <v> : U032c            # voiced: k̬
<Multi_key> <backslash> <underscore> <asciitilde> : U0303   # nasalized: ã
<Multi_key> <backslash> <underscore> <braceleft> : U031a    # no audible release: t̚
<Multi_key> <backslash> <underscore> <k> : U0330            # creaky: a̰
<Multi_key> <backslash> <underscore> <t> : U0324            # breathy: a̤

# tone, separate intentionally, different that either xsampa or CXS
# ^ as leader
<Multi_key> <backslash> <asciicircum> <r> : U030c           # rising: ̌a̝
<Multi_key> <backslash> <asciicircum> <f> : U0302           # falling: â
<Multi_key> <backslash> <asciicircum> <l> : U0300           # low: à
<Multi_key> <backslash> <asciicircum> <L> : U030f           # extra low: ȁ
<Multi_key> <backslash> <asciicircum> <R> <l> : U1dc5       # low rising: a᷅
<Multi_key> <backslash> <asciicircum> <h> : U0301           # high: á
<Multi_key> <backslash> <asciicircum> <H> : U030b           # extra high: a̋
<Multi_key> <backslash> <asciicircum> <R> <h> : U1dc4       # high rising: a᷄
<Multi_key> <backslash> <asciicircum> <m> : U0304           # mid: a̻
<Multi_key> <backslash> <asciicircum> <R> <f> : U1dc8       # rising falling: a᷈
# global tones
<Multi_key> <backslash> <asciicircum> <G> <f> : "↘"         # global falling
<Multi_key> <backslash> <asciicircum> <G> <r> : "↗"         # global rising
