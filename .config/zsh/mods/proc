#!/bin/false

# process stuff

if [[ "$1" == "load" ]]; then

function procmem {
    local pid

    function get_mem_from_proc {
        local value
            if [[ -r "/proc/$1/status" ]]; then
                read -r _ value _ <<< $(grep "VmRSS" "/proc/$1/status")
                print -- ${value:-0}
            else
                print 
            fi
    }

    if (($# == 0)); then
        while read -r pid; do
            get_mem_from_proc "$pid"
        done
    else
        for pid in "$@"; do
            get_mem_from_proc "$pid"
        done
    fi
}

function proccmd {
    local pid 
    function get_cmd_from_proc {
        local value
        if [[ -r "/proc/$1/cmdline" ]]; then
            value="$(< /proc/$1/cmdline)"
            print -- ${value//$'\0'/' '}
        else
            print 
        fi

    }
    if (($# == 0)); then
        while read -r pid; do
            get_cmd_from_proc "$pid"
        done
    else
        for pid in "$@"; do
            get_cmd_from_proc "$pid"
        done
    fi
}


elif [[ "$1" == "unload" ]]; then

unfunction procmem proccmd

fi
