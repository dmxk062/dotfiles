; generic widget definitions

(defwidget hsep [height]
    (box :class "hsep" :style "margin-top: ${height / 2}; margin-bottom: ${height / 2}"))


(include "./bar/bar.yuck")
(defwindow bar
    :monitor 0
    :geometry (geometry 
        :x "0px"
        :y "0px"
        :width "100%"
        :height "32px"
        :anchor "top center")
    :stacking "fg"
    :exclusive true
    :namespace "eww_bar"
    :hexpand false
    :vexpand false
    (top-bar))
