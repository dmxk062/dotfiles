# vim: ft=swayconfig

mode "clipboard" {
    bindsym Escape mode "default"
    bindsym Y exec wl-paste -p | wl-copy; mode "default"
    bindsym Mod1+Y exec wl-paste | wl-copy -p; mode "default"
    bindsym E exec $sc/edit-clipboard.sh; mode "default"
    bindsym Mod1+E exec $sc/edit-clipboard.sh -p; mode "default"
    bindsym C exec wl-copy ""; mode "default"
    bindsym Mod1+C exec wl-copy -p ""; mode "default"
    bindsym P exec $sc/print-clipboard.sh
    bindsym Mod1+P exec $sc/print-clipboard.sh -p
    bindsym T exec $sc/translate.sh; mode "default"
    bindsym Mod1+T exec $sc/translate.sh -p; mode "default"
    bindsym S exec $sc/speak-clipboard.sh; mode "default"
    bindsym Mod1+S exec $sc/speak-clipboard.sh -p; mode "default"
    bindsym Exclam exec $sc/exec-with --pid kitty $floating kitten @ --to unix:/tmp/kitty-%p send-text "wl-paste "; mode "default"
}

bindsym $mod+Y mode "clipboard"
