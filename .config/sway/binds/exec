# vim: ft=swayconfig

bindsym {
    $mod+Return         exec $term
    $mod+Shift+Return   exec $sc/exec_with pid kitty "floating enable"
    $mod+W              exec firefox
    $mod+Shift+W        exec firefox --private-window
    $mod+E              exec nautilus -w
    $mod+Shift+E        exec $sc/exec_with class org.gnome.Nautilus "nautilus -w" "floating enable"
    $mod+Space          exec killall wofi || wofi --show drun
    $mod+Shift+Semicolon exec killall rofi || ~/.config/rofi/applets/power/run.sh
    $mod+Semicolon      exec swaylock
    $mod+Period         exec swaync-client --close-latest
}
