# vim: ft=swayconfig

bindsym $mod+Grave scratchpad show
bindsym $mod+Shift+Grave move window to scratchpad

# numeric {{{
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

bindsym $mod+KP_1 workspace number 1
bindsym $mod+KP_2 workspace number 2
bindsym $mod+KP_3 workspace number 3
bindsym $mod+KP_4 workspace number 4
bindsym $mod+KP_5 workspace number 5
bindsym $mod+KP_6 workspace number 6
bindsym $mod+KP_7 workspace number 7
bindsym $mod+KP_8 workspace number 8
bindsym $mod+KP_9 workspace number 9
bindsym $mod+KP_0 workspace number 10

bindsym $mod+Shift+KP_1 move window to workspace number 1
bindsym $mod+Shift+KP_2 move window to workspace number 2
bindsym $mod+Shift+KP_3 move window to workspace number 3
bindsym $mod+Shift+KP_4 move window to workspace number 4
bindsym $mod+Shift+KP_5 move window to workspace number 5
bindsym $mod+Shift+KP_6 move window to workspace number 6
bindsym $mod+Shift+KP_7 move window to workspace number 7
bindsym $mod+Shift+KP_8 move window to workspace number 8
bindsym $mod+Shift+KP_9 move window to workspace number 9
bindsym $mod+Shift+KP_0 move window to workspace number 10

bindsym $mod+Ctrl+KP_1 move window to workspace number 1; workspace number 1
bindsym $mod+Ctrl+KP_2 move window to workspace number 2; workspace number 2
bindsym $mod+Ctrl+KP_3 move window to workspace number 3; workspace number 3
bindsym $mod+Ctrl+KP_4 move window to workspace number 4; workspace number 4
bindsym $mod+Ctrl+KP_5 move window to workspace number 5; workspace number 5
bindsym $mod+Ctrl+KP_6 move window to workspace number 6; workspace number 6
bindsym $mod+Ctrl+KP_7 move window to workspace number 7; workspace number 7
bindsym $mod+Ctrl+KP_8 move window to workspace number 8; workspace number 8
bindsym $mod+Ctrl+KP_9 move window to workspace number 9; workspace number 9
bindsym $mod+Ctrl+KP_0 move window to workspace number 10; workspace number 10

bindsym $mod+Shift+1 move window to workspace number 1
bindsym $mod+Shift+2 move window to workspace number 2
bindsym $mod+Shift+3 move window to workspace number 3
bindsym $mod+Shift+4 move window to workspace number 4
bindsym $mod+Shift+5 move window to workspace number 5
bindsym $mod+Shift+6 move window to workspace number 6
bindsym $mod+Shift+7 move window to workspace number 7
bindsym $mod+Shift+8 move window to workspace number 8
bindsym $mod+Shift+9 move window to workspace number 9
bindsym $mod+Shift+0 move window to workspace number 10

bindsym $mod+Ctrl+1 move window to workspace number 1; workspace number 1
bindsym $mod+Ctrl+2 move window to workspace number 2; workspace number 2
bindsym $mod+Ctrl+3 move window to workspace number 3; workspace number 3
bindsym $mod+Ctrl+4 move window to workspace number 4; workspace number 4
bindsym $mod+Ctrl+5 move window to workspace number 5; workspace number 5
bindsym $mod+Ctrl+6 move window to workspace number 6; workspace number 6
bindsym $mod+Ctrl+7 move window to workspace number 7; workspace number 7
bindsym $mod+Ctrl+8 move window to workspace number 8; workspace number 8
bindsym $mod+Ctrl+9 move window to workspace number 9; workspace number 9
bindsym $mod+Ctrl+0 move window to workspace number 10; workspace number 10

bindsym $mod+Left workspace s1
bindsym $mod+Down workspace s2
bindsym $mod+Right workspace s3
bindsym $mod+Up workspace s4

bindsym $mod+Shift+Left move window to workspace s1
bindsym $mod+Shift+Down move window to workspace s2
bindsym $mod+Shift+Right move window to workspace s3
bindsym $mod+Shift+Up move window to workspace s4

bindsym $mod+Ctrl+Left move window to workspace s1; workspace s1
bindsym $mod+Ctrl+Down move window to workspace s2; workspace s2
bindsym $mod+Ctrl+Right move window to workspace s3; workspace s3
bindsym $mod+Ctrl+Up move window to workspace s4; workspace s4
# }}}

bindsym $mod+Bracketright exec $sc/in_order.sh go next
bindsym $mod+Bracketleft  exec $sc/in_order.sh go prev
bindsym $mod+Shift+Bracketright exec $sc/in_order.sh move next
bindsym $mod+Shift+Bracketleft  exec $sc/in_order.sh move prev
bindsym $mod+Ctrl+Bracketright exec $sc/in_order.sh push next
bindsym $mod+Ctrl+Bracketleft  exec $sc/in_order.sh push prev
