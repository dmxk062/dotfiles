# vim: ft=swayconfig
bindsym $mod+Q kill

# [D]etach
bindsym $mod+D floating toggle; resize shrink width 800 height 600

bindsym $mod+H focus left
bindsym $mod+J focus down
bindsym $mod+K focus up
bindsym $mod+L focus right

bindsym $mod+Shift+H move left
bindsym $mod+Shift+J move down
bindsym $mod+Shift+K move up
bindsym $mod+Shift+L move right

bindsym $mod+S splitv
bindsym $mod+V splith

bindsym $mod+F fullscreen
bindsym $mod+Shift+F exec $sc/fake_fullscreen.sh

# Like vim for numbers
bindsym $mod+A resize grow width 64px; resize grow height 64px
bindsym $mod+X resize shrink width 64px; resize shrink height 64px 

# Much smarter resize
bindsym $mod+Ctrl+H nop resize left 32
bindsym $mod+Ctrl+J nop resize down 32
bindsym $mod+Ctrl+K nop resize up 32
bindsym $mod+Ctrl+L nop resize right 32

# suspend a windows underlying process
bindsym $mod+Ctrl+Z exec $sc/stop_continue_window.sh

bindsym $mod+Z focus mode_toggle

# TODO: make sure it exits with empty input
# may a --exec option?

# Like VIM
bindsym $mod+Apostrophe exec $sc/on-mark.sh initial focus
bindsym $mod+Shift+Apostrophe exec $sc/on-mark.sh search focus

# (G)et
bindsym $mod+G exec $sc/on-mark.sh initial move workspace current
bindsym $mod+Shift+G exec $sc/on-mark.sh search move workspace current

# (T)ag, (M)ark is used for media
bindsym $mod+T exec swaymsg mark $(wayinput -t "Mark")
bindsym $mod+Shift+T exec swaymsg mark $(wayinput -l -1 -t "Mark")
