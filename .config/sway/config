# Logo key. Use Mod1 for Alt.
set $mod Mod4
set $term kitty
# scripts
set $sc ~/.config/sway/scripts/
set $mainS DP-1
set $leftS DP-3

# emulate spiral layout
# for_window [app_id=".*"] split toggle
# default_orientation vertical

corner_radius 12
shadows enable
shadows_on_csd enable
shadow_color #00000040
shadow_blur_radius 14

floating_modifier $mod

gaps inner 4
gaps outer 8
default_border none
titlebar_separator disable

include ./color
include ./displays
include ./rules
include ./workspaces
include ./binds/binds

xwayland enable

font Torus Pro 10

input * {
    xkb_options compose:ralt
    xkb_numlock enabled
}

exec swayidle -w
exec playerctld
exec nm-applet
exec blueman-applet
exec ~/.config/background/wallpaper.sh set
exec ~/.config/sway/eww/eww.sh

exec persway daemon -d spiral

# handle effects for rofi in the compositor, much nicer and more consistent
layer_effects "rofi" shadows enable; corner_radius 18

include /etc/sway/config.d/*
