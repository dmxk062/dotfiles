# Logo key. Use Mod1 for Alt.
set $mod Mod4
set $term kitty
# scripts
set $sc ~/.config/sway/scripts
set $mainS DP-1
set $leftS DP-3
set $eww ~/.config/sway/eww

# emulate spiral layout
# for_window [app_id=".*"] split toggle
# default_orientation vertical

corner_radius 12
shadows enable
shadows_on_csd enable
shadow_color #00000060
shadow_blur_radius 14
blur_xray disable
blur enable

floating_modifier $mod

gaps inner 4
gaps outer 8
default_border none
titlebar_separator disable

include ./color
include ./displays
include ./rules
include ./workspaces
include ./binds/*

xwayland enable

font Torus Pro 10

input * {
    xkb_options compose:ralt
    xkb_numlock enabled
}

exec swayidle -w
exec playerctld
exec nm-applet
exec blueman-applet
exec ydotoold
exec ~/.config/background/wallpaper.sh set
exec $eww/eww.sh
# dbus secrets agent
exec gnome-keyring-daemon
# polkit
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# autotiling layout
exec_always pkill -f "python.*layout.py"
exec_always $sc/layout.py

exec_always pkill -f "python.*smart_resize.py"
exec_always $sc/smart_resize.py

# handle effects for rofi in the compositor, much nicer and more consistent
layer_effects "rofi" shadows enable; corner_radius 18; blur disable

include /etc/sway/config.d/*
# not set by the above files yet
exec dbus-update-activation-environment XDG_SESSION_TYPE
workspace 1
