#!/usr/bin/env bash

read -r _ _ _ _ _ _ _ url < <(dig -t SRV _api._tcp.radio-browser.info +noall +answer | shuf -n 1)

QUERY="$1"
shift
while [[ -n "$1" && "$1" != "--" ]]; do
    QUERY="$QUERY&$1"
    shift
done
URL="https://${url:-1}/json/stations/search?$QUERY"

curl --silent --header "User-Agent: script/1.0" "$URL" \
| jq '.[]|.name, "URL: \(.url_resolved)", "Bitrate: \(.bitrate)kbps", "Country: \(.country)",  ""' -r
